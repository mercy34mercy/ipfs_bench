{
  "testConfiguration": {
    "name": "IPFS Bandwidth Performance Test",
    "description": "Test IPFS performance under different bandwidth constraints",
    "testDirectory": "/test-files",
    "iterations": 2,
    "outputDirectory": "/results",
    "timeout": 600000
  },
  "testFiles": [
    {
      "filename": "test10m.dat",
      "size": "10MB",
      "sizeBytes": 10485760
    },
    {
      "filename": "test50m.dat",
      "size": "50MB",
      "sizeBytes": 52428800
    },
    {
      "filename": "test100m.dat",
      "size": "100MB",
      "sizeBytes": 104857600
    },
    {
      "filename": "test250m.dat",
      "size": "250MB",
      "sizeBytes": 262144000
    },
    {
      "filename": "test500m.dat",
      "size": "500MB",
      "sizeBytes": 524288000
    },
    {
      "filename": "test1g.dat",
      "size": "1GB",
      "sizeBytes": 1073741824
    },
    {
      "filename": "test2g.dat",
      "size": "2GB",
      "sizeBytes": 2147483648
    },
    {
      "filename": "test4g.dat",
      "size": "4GB",
      "sizeBytes": 4294967296
    }
  ],
  "networkScenarios": [
    {
      "id": "no-limit",
      "name": "No Bandwidth Limit",
      "description": "Baseline test with no network restrictions",
      "bandwidth": null,
      "bandwidthCommand": null,
      "enabled": true
    },
    {
      "id": "1gbps",
      "name": "1 Gbps Bandwidth",
      "description": "Test with 1 Gbps bandwidth limit",
      "bandwidth": "1000mbit",
      "bandwidthValue": 1000000000,
      "bandwidthCommand": "/app/scripts/network-chaos/limit-bandwidth-all.sh",
      "enabled": true
    },
    {
      "id": "100mbps",
      "name": "100 Mbps Bandwidth",
      "description": "Test with 100 Mbps bandwidth limit",
      "bandwidth": "100mbit",
      "bandwidthValue": 100000000,
      "bandwidthCommand": "/app/scripts/network-chaos/limit-bandwidth-all.sh",
      "enabled": true
    },
    {
      "id": "10mbps",
      "name": "10 Mbps Bandwidth",
      "description": "Test with 10 Mbps bandwidth limit",
      "bandwidth": "10mbit",
      "bandwidthValue": 10000000,
      "bandwidthCommand": "/app/scripts/network-chaos/limit-bandwidth-all.sh",
      "enabled": true
    }
  ],
  "testTargets": [
    {
      "container": "ipfs-org1",
      "role": "upload",
      "apiPort": 5001,
      "gatewayPort": 8080
    },
    {
      "container": "ipfs-org2",
      "role": "download",
      "apiPort": 5001,
      "gatewayPort": 8080
    }
  ],
  "testMetrics": [
    "uploadTime",
    "downloadTime",
    "throughput",
    "latency",
    "successRate",
    "errorCount"
  ],
  "testPhases": [
    {
      "phase": 1,
      "name": "Baseline Test",
      "description": "Test without bandwidth limitations",
      "scenarioId": "no-limit"
    },
    {
      "phase": 2,
      "name": "1 Gbps Test",
      "description": "Test with 1 Gbps bandwidth limit",
      "scenarioId": "1gbps"
    },
    {
      "phase": 3,
      "name": "100 Mbps Test",
      "description": "Test with 100 Mbps bandwidth limit",
      "scenarioId": "100mbps"
    },
    {
      "phase": 4,
      "name": "10 Mbps Test",
      "description": "Test with 10 Mbps bandwidth limit",
      "scenarioId": "10mbps"
    }
  ],
  "reporting": {
    "format": "json",
    "includeStatistics": true,
    "statistics": [
      "mean",
      "median",
      "min",
      "max",
      "stddev",
      "p95",
      "p99"
    ],
    "generateCharts": true,
    "chartTypes": [
      "throughput-comparison",
      "file-size-performance",
      "bandwidth-impact"
    ]
  }
}